<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_margin="10dp"
                  android:gravity="center_horizontal">
        <EditText
                android:id="@+id/usernum_et"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:hint="请输入你的编号"/>
        <EditText
                android:id="@+id/username_et"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:maxLines="1"
                android:hint="请输入你的姓名"/>
        <ImageView
                android:id="@+id/avatar_iv"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/avatar"/>
        <com.github.rubensousa.raiflatbutton.RaiflatButton
                android:id="@+id/auto_detect_btn"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_margin="6dp"
                android:text="自动检测"/>

        <com.github.rubensousa.raiflatbutton.RaiflatButton
                android:id="@+id/submit_btn"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_margin="6dp"
                android:text="更新"/>
        <com.github.rubensousa.raiflatbutton.RaiflatButton
                android:id="@+id/reg_identify_btn"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_margin="6dp"
                android:text="验证人脸"/>

        <com.github.rubensousa.raiflatbutton.RaiflatButton
                android:id="@+id/pick_from_album_btn"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_margin="6dp"
                android:text="从相册选取"/>
    </LinearLayout>


</RelativeLayout>
