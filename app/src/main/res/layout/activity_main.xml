<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp"
        android:background="@drawable/bg">


    <android.support.constraint.ConstraintLayout
            android:layout_width="163dp"
            android:layout_height="0dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent">

        <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:bmb_buttonEnum="ham"
                app:bmb_piecePlaceEnum="piecePlace_ham_4"
                app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                app:bmb_hamWidth="0dp"
                app:bmb_hamHeight="0dp"
                app:bmb_normalColor="@android:color/holo_blue_light"
                app:layout_constraintBottom_toBottomOf="@+id/bmb" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="104dp">
            <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="其他"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"/>
        </com.nightonke.boommenu.BoomMenuButton>
        <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:bmb_buttonEnum="ham"
                app:bmb_piecePlaceEnum="piecePlace_ham_4"
                app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                app:bmb_hamWidth="0dp"
                app:bmb_hamHeight="0dp"
                app:bmb_normalColor="@android:color/holo_blue_light"
                app:layout_constraintStart_toStartOf="@+id/bmb2" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="26dp">
            <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="点名"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"/>
        </com.nightonke.boommenu.BoomMenuButton>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
