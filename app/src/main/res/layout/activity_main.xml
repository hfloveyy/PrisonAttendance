<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp"
        android:background="@drawable/bg">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="467dp"
            android:orientation="vertical"
            android:gravity="bottom">

        <TextView android:id="@+id/status_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:text="设备状态:"
        />
        <TextView android:id="@+id/area_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:text="监区:"
        />
        <TextView android:id="@+id/appno_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:text="设备编号:"
        />
        <TextView android:id="@+id/all_count_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:text="在押总数:"
                  android:textSize="20dp"/>
        <TextView android:id="@+id/actual_num_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:text="工作区现场人数:"
                  android:textSize="20dp"/>
        <TextView android:id="@+id/lack_num_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="5dp"
                  android:text="离开工作区人数:"
                  android:textSize="20dp"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="163dp"
            android:layout_height="0dp"
            android:id="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent">
        <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:bmb_buttonEnum="ham"
                app:bmb_piecePlaceEnum="piecePlace_ham_4"
                app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                app:bmb_hamWidth="0dp"
                app:bmb_hamHeight="0dp"
                app:bmb_normalColor="@android:color/holo_blue_light"
                app:layout_constraintBottom_toBottomOf="@+id/bmb" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="104dp">
            <TextView
                    android:id="@+id/other_tv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="其他"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"/>
        </com.nightonke.boommenu.BoomMenuButton>
        <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                app:bmb_buttonEnum="ham"
                app:bmb_piecePlaceEnum="piecePlace_ham_4"
                app:bmb_buttonPlaceEnum="buttonPlace_ham_4"
                app:bmb_hamWidth="0dp"
                app:bmb_hamHeight="0dp"
                app:bmb_normalColor="@android:color/holo_blue_light"
                app:layout_constraintStart_toStartOf="@+id/bmb2" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="26dp">
            <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="点名"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"/>
        </com.nightonke.boommenu.BoomMenuButton>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
